QScrollBar {
	background: #222;
    color: #fff;
}
QScrollBar::handle {
	background: #444;

    /* Detailed raised 3D border */
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #666;
    border-left-style: solid;
    border-left-width: 1px;
    border-left-color: #666;
    border-right-style: solid;
    border-right-width: 2px;
    border-right-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #444, stop: 1 #222);
    border-bottom-style: solid;
    border-bottom-width: 2px;
    border-bottom-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #444, stop: 1 #222);
}

QScrollBar::handle:horizontal {
	min-width: 20px;
}
QScrollBar::handle:vertical {
	min-height: 20px;
}

/* Keep handle clear of arrow buttons */
QScrollBar:horizontal {
	/*height: 15px;*/
    padding: 0 15px;
}
QScrollBar:vertical {
	/*width: 15px;*/
    padding: 15px 0;
}

