QScrollBar::add-line, QScrollBar::sub-line {
	background-color: #444;

    /* Detailed raised 3D border */
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #666;
    border-left-style: solid;
    border-left-width: 1px;
    border-left-color: #666;
    border-right-style: solid;
    border-right-width: 2px;
    border-right-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #444, stop: 1 #222);
    border-bottom-style: solid;
    border-bottom-width: 2px;
    border-bottom-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #444, stop: 1 #222);
}
QScrollBar::add-line:pressed, QScrollBar::sub-line:pressed {
    /* Detailed sunken 3D border */
    border-top-style: solid;
    border-top-width: 2px;
    border-top-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #444, stop: 1 #222);
    border-left-style: solid;
    border-left-width: 2px;
    border-left-color: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0, stop: 0 #444, stop: 1 #222);
    border-right-style: solid;
    border-right-width: 2px;
    border-right-color: #666;
    border-bottom-style: solid;
    border-bottom-width: 2px;
    border-bottom-color: #666;
}


